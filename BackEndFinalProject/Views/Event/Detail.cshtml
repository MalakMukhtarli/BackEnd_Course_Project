@model Event
@{
    ViewData["Title"] = "Detail";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/assets/img/event/@Model.Image" width="100%" alt="event-details" />
                        <div class="event-date">
                            <h3>@Model.TimeStart.Day <span>@Model.TimeStart.ToString("MMMM")</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.Title</h2>
                        <ul>
                            <li><span>time:</span> @Model.TimeStart.ToString("HH:mm") - @Model.TimeEnd.ToString("HH:mm")</li>
                            <li><span>venue</span> @Model.Venue</li>
                        </ul>
                        @Html.Raw(Model.EventDetail.Description)
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            <div class="single-speaker">
                                <div class="speaker-img">
                                    <img src="~/assets/img/event/@Model.EventDetail.SpeakerImage" alt="speaker" />
                                </div>
                                <div class="speaker-name">
                                    <h5>@Model.EventDetail.SpeakerName</h5>
                                    <p>@Model.EventDetail.SpeakerPosition</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>
                            I must explain to you how all this a mistaken idea of ncing
                            great explorer of the rut<br />
                            the is lder of human happinescias unde omnis iste natus error
                            sit volptatem
                        </p>
                        <form id="contact-form"
                              action="http://demo.devitems.com/eduhome/mail.php"
                              method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name" />
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email" />
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject" />
                                    <p>Massage</p>
                                    <textarea name="message"
                                              id="message"
                                              cols="15"
                                              rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("Sidebar")
        </div>
    </div>
</div>
<!-- Event Details End -->