@model List<Course>
@foreach (Course course in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course">
            <div class="course-img">
                <a asp-controller="Course" asp-action="Index">
                    <img src="~/assets/img/course/@course.Image" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a href="course-details.html">@course.Name</a></h3>
                <p>@course.Description</p>
                <a class="default-btn" asp-controller="Course" asp-action="Index">read more</a>
            </div>
        </div>
    </div>
}
