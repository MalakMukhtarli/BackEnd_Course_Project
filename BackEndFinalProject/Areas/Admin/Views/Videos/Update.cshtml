@model HomeVideo

@{
    ViewData["Title"] = "Update";
}
<h4>HomeVideo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="forms-sample" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="@Model.VideoLink" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="@Model.VideoLink" class="form-control" />
                <span asp-validation-for="VideoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary mr-2">Submit</button>
                <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

