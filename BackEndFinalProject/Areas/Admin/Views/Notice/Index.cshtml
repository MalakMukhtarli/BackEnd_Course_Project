@model List<Notice>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h4 class="card-title">Notice Table</h4>
                <a asp-controller="Notice" asp-action="Create" class="btn btn-rounded btn-outline-success">
                    <i class="mdi mdi-plus-circle-outline" style="font-size: 15px;"> Add Notice</i>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Added Time </th>
                            <th> Content </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Notice notice in Model)
                        {
                            <tr>
                                <td class="py-1" style="width: 13%;">
                                    <div>@notice.AddedTime.Day, @notice.AddedTime.ToString("MMMM") @notice.AddedTime.Year</div>
                                </td>
                                <td class="py-1">
                                    <p>@notice.Content</p>
                                </td>
                                <td style="width: 30%;">
                                    <a asp-controller="Notice" asp-action="Detail" asp-route-id="@notice.Id" class="btn btn-rounded btn-outline-info">
                                        <i class="mdi mdi-information-outline"></i>
                                    </a>
                                    <a asp-controller="Notice" asp-action="Update" asp-route-id="@notice.Id" class="btn btn-rounded btn-outline-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-controller="Notice" asp-action="Delete" asp-route-id="@notice.Id" class="btn btn-rounded btn-outline-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>