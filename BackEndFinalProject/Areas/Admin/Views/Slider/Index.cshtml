@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h4 class="card-title">Slider Table</h4>
                @if (ViewBag.SliderCount < 5)
                {
                    <a asp-controller="Slider" asp-action="Create" class="btn btn-rounded btn-outline-success">
                        <i class="mdi mdi-plus-circle-outline" style="font-size: 15px;"> Add Slider</i>
                    </a>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Title </th>
                            <th> Subtitle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.SliderCount > 1)
                        {
                            foreach (Slider slider in Model)
                            {
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/img/slider/@slider.Image" style="width:100px; height:100px" />
                            </td>
                            <td class="py-1">
                                <div>@Html.Raw(slider.Title)</div>
                            </td>
                            <td class="py-1">
                                <p>@Html.Raw(slider.Subtitle)</p>
                            </td>
                            <td>
                                <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-rounded btn-outline-info">
                                    <i class="mdi mdi-information-outline"></i>
                                </a>
                                <a asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id" class="btn btn-rounded btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-rounded btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/img/@Model.ElementAt(0).Image" style="width:120px; height:80px" />
                                </td>
                                <td>
                                    <a asp-controller="Slider" asp-action="Detail" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-rounded btn-outline-info">
                                        <i class="mdi mdi-information-outline"></i>
                                    </a>
                                    <a asp-controller="Slider" asp-action="Update" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-rounded btn-outline-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
