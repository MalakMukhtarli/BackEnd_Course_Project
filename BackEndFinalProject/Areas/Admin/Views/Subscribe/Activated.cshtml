@model Subscribe
@{
    ViewData["Title"] = "Activated";
}
<form method="post">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Subscribe Table</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Email </th>
                                <th> Disable/Enable </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="py-1">
                                    <div>@Model.Email</div>
                                </td>
                                @if (Model.IsDeleted)
                                {
                                    <td style="color:red">
                                        Disabled
                                    </td>
                                }
                                else
                                {
                                    <td style="color:forestgreen">
                                        Enabled
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <h4 class="text-danger">Are you sure?</h4>
        @if (Model.IsDeleted)
        {
            <button type="submit" asp-route-id="@Model.Id" class="btn btn-outline-success">
                Enable
            </button>
        }
        else
        {
            <button type="submit" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                Disable
            </button>
        }
        <a class="btn btn-outline-secondary" asp-action="Index">Go Back</a>
    </div>
</form>
