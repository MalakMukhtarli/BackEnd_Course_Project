@model IEnumerable<Subscribe>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h4 class="card-title">Subscribe Table</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Email </th>
                            <th> Disable/Enable </th>
                            <th> Settings </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (Subscribe subscribe in Model)
                            {
                            <tr>

                                <td class="py-1">
                                    <div>@subscribe.Email</div>
                                </td>
                                @if (subscribe.IsDeleted)
                                {
                                    <td style="color:red">
                                        Disabled
                                    </td>
                                }
                                else
                                {
                                    <td style="color:forestgreen">
                                        Enabled
                                    </td>
                                }
                                    <td>
                                        @if (subscribe.IsDeleted)
                                        {
                                        <a asp-controller="Subscribe" asp-action="Activated" asp-route-id="@subscribe.Id" class="btn btn-outline-success">
                                            Enable
                                        </a>
                                        }
                                        else
                                        {
                                        <a asp-controller="Subscribe" asp-action="Activated" asp-route-id="@subscribe.Id" class="btn btn-outline-danger">
                                            Disable
                                        </a>
                                        }
                                    </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>