@model IEnumerable<Testimonial>

@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h4 class="card-title">Slider Table</h4>
                @if (ViewBag.TestimonialCount < 10)
                {
                    <a asp-controller="Testimonials" asp-action="Create" class="btn btn-rounded btn-outline-success">
                        <i class="mdi mdi-plus-circle-outline" style="font-size: 15px;"> Add Testimonial</i>
                    </a>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Full Name </th>
                            <th> Description </th>
                            <th> Title </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.TestimonialCount > 1)
                        {
                            foreach (Testimonial testimonial in Model)
                            {
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/img/testimonial/@testimonial.Image" style="width:100px; height:100px" />
                            </td>
                            <td class="py-1">
                                <p>@testimonial.FullName</p>
                            </td>
                            <td class="py-1" style="width: 35%;">
                                <p>@testimonial.Description</p>
                            </td>
                            <td class="py-1">
                                <p>@testimonial.Note</p>
                            </td>
                            <td>
                                <a asp-controller="Testimonials" asp-action="Detail" asp-route-id="@testimonial.Id" class="btn btn-rounded btn-outline-info">
                                    <i class="mdi mdi-information-outline"></i>
                                </a>
                                <a asp-controller="Testimonials" asp-action="Update" asp-route-id="@testimonial.Id" class="btn btn-rounded btn-outline-warning">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <a asp-controller="Testimonials" asp-action="Delete" asp-route-id="@testimonial.Id" class="btn btn-rounded btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                            }
                        }
                        else
                        {
                    <tr>
                        <td class="py-1">
                            <img src="~/assets/img/slider/@Model.ElementAt(0).Image" style="width:120px; height:80px" />
                        </td>
                        <td class="py-1">
                            <img src="~/img/@Model.ElementAt(0).FullName" style="width:120px; height:80px" />
                        </td>
                        <td class="py-1">
                            <img src="~/img/@Model.ElementAt(0).Description" style="width:120px; height:80px" />
                        </td>
                        <td class="py-1">
                            <img src="~/img/@Model.ElementAt(0).Note" style="width:120px; height:80px" />
                        </td>
                        <td>
                            <a asp-controller="Testimonials" asp-action="Detail" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-rounded btn-outline-info">
                                <i class="mdi mdi-information-outline"></i>
                            </a>
                            <a asp-controller="Testimonials" asp-action="Update" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-rounded btn-outline-warning">
                                <i class="mdi mdi-table-edit"></i>
                            </a>
                        </td>
                    </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
