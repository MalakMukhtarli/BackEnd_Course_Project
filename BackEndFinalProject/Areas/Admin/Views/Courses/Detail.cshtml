@model Course

@{
    ViewData["Title"] = "Detail";
}

<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/assets/img/course/@Model.Image" width="100%" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Name</h2>
                        <p>@Model.Description</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.CourseDetail.CourseAbout</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.CourseDetail.HowToApply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                @Html.Raw(Model.CourseDetail.Certification)
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.CourseDetail.CourseStartDate.Day @Model.CourseDetail.CourseStartDate.ToString("MMMM"), @Model.CourseDetail.CourseStartDate.Year</span></li>
                                <li>duration <span>@Model.CourseDetail.CourseDuration MONTH</span></li>
                                <li>class duration <span>@Model.CourseDetail.ClassDuration hours</span></li>
                                <li>skill level <span>@Model.CourseDetail.SkillLevel</span></li>
                                <li>language <span>@Model.CourseDetail.Language</span></li>
                                <li>students <span>@Model.CourseDetail.StudentsCount</span></li>
                                <li>assesments <span>@Model.CourseDetail.Assessment</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.CourseDetail.Price</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-outline-secondary mt-4">Go Back</a>
            </div>
        </div>
    </div>
</div>